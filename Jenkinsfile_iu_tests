pipeline {
    agent any
    triggers {
        pollSCM('*/1 * * * *')
    }
    parameters {
        string(name: 'ENV', defaultValue: 'DEV', description: 'TEST ENV')
                }
    stages { 
        stage('build') {
            steps {
                echo "Test on ${params.PERSON} env"
            }
        }
    }
}